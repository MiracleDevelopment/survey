<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oakkub.survey.ui.surveys.list.SurveysFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/surveysItemRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/surveysDotItemRecyclerView"
        android:layout_width="@dimen/surveys_dot_indicator_list_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_padding_large"
        android:layout_marginStart="@dimen/margin_padding_large"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/surveys_dot_indicator_padding_bottom"
        android:paddingTop="@dimen/surveys_dot_indicator_padding_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
